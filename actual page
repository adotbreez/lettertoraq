        }
        #overlay {
            background: rgba(0, 0, 0, 0.7);
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        #letter {
            position: relative;
            top: 50%;
            transform: translateY(-50%);
            max-width: 800px;
            margin: auto;
            font-size: 20px;
            line-height: 1.6;
            white-space: pre-wrap;
        }
        /* Blinking cursor */
        #cursor {
            display: inline-block;
            width: 10px;
            background-color: #fff;
            animation: blink 1s step-end infinite;
        }
        @keyframes blink {
            from, to {
                background-color: transparent;
            }
            50% {
                background-color: #fff;
            }
        }
        /* Snowflake styles */
        .snowflake {
            position: fixed;
            top: -10px;
            z-index: 9999;
            user-select: none;
